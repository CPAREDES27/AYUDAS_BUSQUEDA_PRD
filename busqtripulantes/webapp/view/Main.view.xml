<mvc:View
    controllerName="busqtripulantes.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:form = "sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m">
	<VBox >
		<items >
			<form:Form 
				binding="{/searchEmbar}" 
				width="100%" 
				editable="true">
				<form:formContainers>
					<form:FormContainer>
						<form:formElements>
							<form:FormElement>
								<form:fields>
									<Input id="idCodigo" value="{PERNR}" submit="keyPress" maxLength="10"/>
								</form:fields>
								<form:label>
									<Label text="Código" />
								</form:label>
							</form:FormElement>
							<form:FormElement>
								<form:fields>
									<Input id="idNombres" submit="keyPress" value="{VORNA}"  />
								</form:fields>
								<form:label>
									<Label text="Nombres" />
								</form:label>
							</form:FormElement>
							<form:FormElement>
								<form:fields>
									<Input id="idApellidoP" submit="keyPress" value="{NACHN}" />
								</form:fields>
								<form:label>
									<Label text="Apellido Paterno" />
								</form:label>
							</form:FormElement>
						</form:formElements>
					</form:FormContainer>

					<form:FormContainer>
						<form:formElements>
							<form:FormElement>
								<form:fields>
									<Input id="idApellidoM" submit="keyPress" value="{NACH2}" />
								</form:fields>
								<form:label>
									<Label text="Apellido Materno" />
								</form:label>
							</form:FormElement>
								
								<form:FormElement>
								<form:fields>
									<Input id="idCantidad" submit="keyPress" value="200" />
								</form:fields>
								<form:label>
									<Label text="Cant. de aciertos" />
								</form:label>
							</form:FormElement>
						</form:formElements>
					</form:FormContainer>

					<form:FormContainer>
						<form:formElements>
							<form:FormElement>
								<form:fields>
									<Button text="Buscar" icon="sap-icon://search" type="Emphasized" press="onPressSearching" />
									<Button text="Limpiar" icon="sap-icon://clear-filter" type="Ghost" press="onCleanSearh" />
								</form:fields>
								<form:label>
									<Label text=""/>
								</form:label>
							</form:FormElement>
						</form:formElements>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout
						adjustLabelSpan="false"
						columnsM="2"/>
					<!-- <form:ResponsiveGridLayout
						adjustLabelSpan="true"
						breakpointL="1024"
						breakpointM="600"
						breakpointXL="1440"
						columnsL="2"
						columnsM="2"
						columnsXL="-1"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						emptySpanXL="-1"
						labelSpanL="4"
						labelSpanM="2"
						labelSpanS="12"
						labelSpanXL="-1"
						singleContainerFullSize="true"/> -->
				</form:layout>
			</form:Form>
			<ScrollContainer
				height="50vh" vertical="true">
				<Table  id="HelpTable"
						items="{/tempList}"
						growing="false"
						growingScrollToLoad="false"
						growingThreshold="50"
						updateFinished="onUpdateTable">
					<headerToolbar>
						<OverflowToolbar>
							<ObjectStatus
								text="{/pageTable/text}" 
								state="Warning"/>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Label text="Código" />
						</Column>
						<Column>
							<Label text="Nombres" />
						</Column>
						<Column>
							<Label text="Apellido Paterno" />
						</Column>
						<Column>
							<Label text="Apellido Materno" />
						</Column>
						<Column>
							<Label text="Función" />
						</Column>
					</columns>
					<items>
						<ColumnListItem
							type="Active"
							press="onSelectItem">
							<cells>
								<Text text="{PERNR}" />
								<Text text="{VORNA}" />
								<Text text="{NACHN}" />
								<Text text="{NACH2}" />
								<Text text="{STELL}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>         
			</ScrollContainer>
		</items>
	</VBox>
</mvc:View>
