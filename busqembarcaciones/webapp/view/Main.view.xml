<mvc:View
    controllerName="busqembarcaciones.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:form = "sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
	xmlns:table="sap.ui.table">
	<VBox >
		<items >
			<form:Form 
				binding="{/searchEmbar}" 
				width="100%" 
				editable="true">
				<form:formContainers>
					<form:FormContainer>
						<form:formElements>
							<form:FormElement>
								<form:fields>
									<Input value="{CDEMB}" submit="keyPress"  maxLength="10"/>
								</form:fields>
								<form:label>
									<Label text="Cod. Embarcación" />
								</form:label>
							</form:FormElement>
							<form:FormElement>
								<form:fields>
									<Input value="{NMEMB}" submit="keyPress" />
								</form:fields>
								<form:label>
									<Label text="Nomb. Embarcación" />
								</form:label>
							</form:FormElement>
							<form:FormElement>
								<form:fields>
									<Input value="{STCD1}" submit="keyPress" />
								</form:fields>
								<form:label>
									<Label text="R.U.C. Armador" />
								</form:label>
							</form:FormElement>
						</form:formElements>
					</form:FormContainer>

					<form:FormContainer>
						<form:formElements>
							<form:FormElement>
								<form:fields>
									<Input value="{MREMB}" submit="keyPress"  />
								</form:fields>
								<form:label>
									<Label text="Matrícula" />
								</form:label>
							</form:FormElement>
								<form:FormElement>
								<form:fields>
									<Select
										selectedKey="{INPRP}"
										forceSelection="false" 
										items="{path:'/INPRP'}">
										<core:Item
											key="{id}"
											text="{descripcion}"/>
									</Select>
								</form:fields>
								<form:label>
									<Label text="Ind. de Propiedad" />
								</form:label>
							</form:FormElement>
								<form:FormElement>
								<form:fields>
									<Input value="{NAME1}" submit="keyPress"  />
								</form:fields>
								<form:label>
									<Label text="Desc Armador" />
								</form:label>
							</form:FormElement>
							<form:FormElement>
								<form:fields>
									<Button text="Buscar" icon="sap-icon://search" type="Emphasized" press="onPressSearchEmbar('1')" />
									<Button text="Limpiar" icon="sap-icon://clear-filter" type="Ghost" press="onCleanSearh" />
								</form:fields>
								<form:label>
									<Label text=""/>
								</form:label>
							</form:FormElement>
						</form:formElements>
					</form:FormContainer>

					<form:FormContainer>
						
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout
						adjustLabelSpan="false"
						columnsM="2"
						columnsL="2"/>
					<!-- <form:ResponsiveGridLayout
						adjustLabelSpan="true"
						breakpointL="1024"
						breakpointM="600"
						breakpointXL="1440"
						columnsL="2"
						columnsM="2"
						columnsXL="-1"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						emptySpanXL="-1"
						labelSpanL="4"
						labelSpanM="2"
						labelSpanS="12"
						labelSpanXL="-1"
						singleContainerFullSize="true"/> -->
				</form:layout>
			</form:Form>
			<ScrollContainer
				height="50vh" vertical="true">
				<table:Table   
				id="table"
				 
                            rows="{/dataEmbarcaciones/data}"
							selectionMode="Single"
							selectionBehavior="Row"
							rowSelectionChange="onSelectItem"	
                             visibleRowCount="12"
                            showColumnVisibilityMenu="{ui>/showVisibilityMenuEntry}"
                            enableColumnFreeze="{ui>/showFreezeMenuEntry}"
                            enableCellFilter="{ui>/enableCellFilter}"
                            columnSelect="onColumnSelect"
                            cellContextmenu="onProductIdCellContextMenu"
                            ariaLabelledBy="title"
							
							>
				<table:extension>
					<OverflowToolbar style="Clear">
						
						<ObjectStatus
								text="{/pageTable/text}" 
								state="Warning"/>
						<ToolbarSpacer/>
                          
						<ToolbarSeparator/>
						<SearchField
							placeholder="Búsqueda rápida"
							value="{ui>/globalFilter}"
							liveChange="onSearch"
							width="15rem"/>
					</OverflowToolbar>
					
				</table:extension>
				<table:columns  editable="false">
					<table:Column width="8.5rem"
						sortProperty="CDEMB"
						filterProperty="CDEMB"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<table:label>
							<Label text="Cod. Embarcación"/>
						</table:label>
						<table:template>
							<ObjectStatus text="{CDEMB}" state="Information" />
						</table:template>
					</table:Column>


					<table:Column width="8rem"
						sortProperty="MREMB"
						filterProperty="MREMB"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<table:label>
							<Label text="Matrícula"/>
						</table:label>
						<table:template>
							<Text text="{MREMB}"/>
						</table:template>
					</table:Column>


					<table:Column width="14rem"
						sortProperty="NMEMB"
						filterProperty="NMEMB"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<table:label>
							<Label text="Nmb. Embarcación"/>
						</table:label>
						<table:template>
							<Text text="{NMEMB}"/>
						</table:template>
					</table:Column>
					
					
					<table:Column width="9rem"
						sortProperty="STCD1"
						filterProperty="STCD1"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<table:label>
							<Label text="R.U.C. Armador"/>
						</table:label>
						<table:template>
							<Text text="{STCD1}"/>
						</table:template>
					</table:Column>
					
					
					
					<table:Column width="20rem"
						sortProperty="NAME1"
						filterProperty="NAME1"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<table:label>
							<Label text="Desc. Armador"/>
						</table:label>
						<table:template>
							<Text text="{NAME1}"/>
						</table:template>
					</table:Column>
					<!--EMBACACION-->
				</table:columns>



			</table:Table>         
			</ScrollContainer>
		</items>
	</VBox>
</mvc:View>