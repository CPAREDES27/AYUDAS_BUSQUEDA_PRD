<mvc:View
    controllerName="busqembarcaciones.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:form = "sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m">
	<VBox >
		<items >
			<form:Form 
				binding="{/searchEmbar}" 
				width="100%" 
				editable="true">
				<form:formContainers>
					<form:FormContainer>
						<form:formElements>
							<form:FormElement>
								<form:fields>
									<Input value="{CDEMB}" submit="keyPress"  maxLength="10"/>
								</form:fields>
								<form:label>
									<Label text="Cod. Embarcación" />
								</form:label>
							</form:FormElement>
							<form:FormElement>
								<form:fields>
									<Input value="{NMEMB}" submit="keyPress" />
								</form:fields>
								<form:label>
									<Label text="Nomb. Embarcación" />
								</form:label>
							</form:FormElement>
							<form:FormElement>
								<form:fields>
									<Input value="{STCD1}" submit="keyPress" />
								</form:fields>
								<form:label>
									<Label text="R.U.C. Armador" />
								</form:label>
							</form:FormElement>
						</form:formElements>
					</form:FormContainer>

					<form:FormContainer>
						<form:formElements>
							<form:FormElement>
								<form:fields>
									<Input value="{MREMB}" submit="keyPress"  />
								</form:fields>
								<form:label>
									<Label text="Matrícula" />
								</form:label>
							</form:FormElement>
								<form:FormElement>
								<form:fields>
									<Select
										selectedKey="{INPRP}"
										forceSelection="false" 
										items="{path:'/INPRP'}">
										<core:Item
											key="{id}"
											text="{descripcion}"/>
									</Select>
								</form:fields>
								<form:label>
									<Label text="Ind. de Propiedad" />
								</form:label>
							</form:FormElement>
								<form:FormElement>
								<form:fields>
									<Input value="{NAME1}" submit="keyPress"  />
								</form:fields>
								<form:label>
									<Label text="Desc Armador" />
								</form:label>
							</form:FormElement>
							<form:FormElement>
								<form:fields>
									<Button text="Buscar" icon="sap-icon://search" type="Emphasized" press="onPressSearchEmbar('1')" />
									<Button text="Limpiar" icon="sap-icon://clear-filter" type="Ghost" press="onCleanSearh" />
								</form:fields>
								<form:label>
									<Label text=""/>
								</form:label>
							</form:FormElement>
						</form:formElements>
					</form:FormContainer>

					<form:FormContainer>
						
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout
						adjustLabelSpan="false"
						columnsM="2"
						columnsL="2"/>
					<!-- <form:ResponsiveGridLayout
						adjustLabelSpan="true"
						breakpointL="1024"
						breakpointM="600"
						breakpointXL="1440"
						columnsL="2"
						columnsM="2"
						columnsXL="-1"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						emptySpanXL="-1"
						labelSpanL="4"
						labelSpanM="2"
						labelSpanS="12"
						labelSpanXL="-1"
						singleContainerFullSize="true"/> -->
				</form:layout>
			</form:Form>
			<ScrollContainer
				height="50vh" vertical="true">
				<Table  id="HelpTable"
						items="{/dataEmbarcaciones/data}"
						growing="false"
						growingScrollToLoad="false"
						growingThreshold="50"
						updateFinished="onUpdateTable">
					<headerToolbar>
						<OverflowToolbar>
							<ObjectStatus
								text="{/pageTable/text}" 
								state="Warning"/>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Label text="Cod. Embarcación" />
						</Column>
						<Column>
							<Label text="Matrícula" />
						</Column>
						<Column>
							<Label text="Nmb. Embarcación" />
						</Column>
						<Column>
							<Label text="R.U.C. Armador" />
						</Column>
						<Column>
							<Label text="Desc. Armador" />
						</Column>
					</columns>
					<items>
						<ColumnListItem
							type="Active"
							press="onSelectItem">
							<cells>
								<ObjectStatus text="{CDEMB}" state="Information" />
								<Text text="{MREMB}" />
								<Text text="{NMEMB}" />
								<Text text="{STCD1}" />
								<Text text="{NAME1}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>         
			</ScrollContainer>
		</items>
	</VBox>
</mvc:View>